  <script src="jquery-2.0.3.js"></script>
<script>
$("#boton").click(function () {
if ($("div:first").is(":hidden")) {
$("div").slideDown("slow");
} else {
$("div").hide("fast");
}
});
 
</script>
</head>
<body>
